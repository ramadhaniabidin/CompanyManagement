@model Pengguna_Kantor
@{
    ViewData["Title"] = "Edit Kantor";
    IEnumerable < Kantor > listKantor = ViewData["ListKantor"] as IEnumerable<Kantor>;
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css"/>
<link rel="stylesheet" href="~/css/Dropdown/style.css"/>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_Kantor" class="control-label">Pilih Kantor</label>
                <select asp-for="id_Kantor" class="selectpicker form-control form-select" data-live-search="true">
                    @foreach(var kantor in listKantor)
                    {
                        <option value="@kantor.id">
                            @kantor.namaCabang
                        </option>
                    }
                </select>
                <span asp-validation-for="id_Kantor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>