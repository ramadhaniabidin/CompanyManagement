@model Login
@{
    ViewData["Title"] = "Login";
    IEnumerable<Peran> listPeran = ViewData["ListPeran"] as IEnumerable<Peran>;
}


<h1>Selamat Datang</h1>

<h2>Silakan Login untuk melanjutkan</h2>

    <form asp-controller="Login" asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="form-group">
            <label asp-for="Peran" class="control-label"></label>
            <select asp-for="Peran" class="form-control form-select">
                @foreach(var peran in listPeran)
                {
                    <option value="@peran.namaPeran">@peran.namaPeran</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary"/>
        </div>
    </form>

<br />
<h3>Belum Punya Akun?</h3>
<a href="@Url.Action("Buat", "Akun")">
    <button class="btn btn-primary">Buat Akun</button>
</a>
