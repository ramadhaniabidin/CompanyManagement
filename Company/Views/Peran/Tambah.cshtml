@model Peran
@{
    ViewData["Title"] = "Tambah Peran";
    int idAkun = (int)ViewData["idAkun"];
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Tambah">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="namaPeran" class="control-label">Masukkan Peran</label>
                <input asp-for="namaPeran" class="form-control"/>
                <span asp-validation-for="namaPeran" class="text-danger"></span>
            </div>
            <input type="hidden" name="idAkun" value="@idAkun"/>
            <div class="form-group">
                <input type="submit" value="Tambah" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>